
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@if (ViewBag.error != null)
{
    <div class="bg-danger text-white">
        @ViewBag.error
    </div>
}

<form action="@Url.Content("~/Login")" method="post">
    <div class="container d-flex justify-content-center">
        <div class="card mx-5 my-5" style="border-radius:13px">
            <div class="card-body py-2 px-2">
                <h2 class="card-heading py-3 px-5">Inicio de Sesión</h2>
                <div class="row rone mx-3 my-3">
                    <div class="col-md-6">
                        <div class="form-group"><label class="sr-only">Usuario</label><input type="text" class="form-control" name="usr" placeholder="Usuario" required></div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group"><label class="sr-only">Contraseña</label><input type="password" class="form-control" name="pass" placeholder="Contraseña" required></div>
                    </div>
                </div>
                <div class="row rtwo mx-3">
                    <div class="col-md-6">
                        <div class="form-group"><button type="submit" class="btn btn-primary mb-2">Inicio</button></div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @Html.Partial("_footer")
            </div>
        </div>
    </div>
</form>

